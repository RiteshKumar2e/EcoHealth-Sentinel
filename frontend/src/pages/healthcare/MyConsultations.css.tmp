.ai-doctor-video {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    background: radial-gradient(circle at center, #1e293b, #0f172a);
}

.ai-avatar-wrapper {
    width: 240px;
    height: 240px;
    background: #1e293b;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border: 4px solid #3b82f6;
    box-shadow: 0 0 50px rgba(59, 130, 246, 0.2);
    transition: all 0.5s ease;
}

.ai-avatar-wrapper.speaking {
    box-shadow: 0 0 80px rgba(59, 130, 246, 0.4);
    transform: scale(1.05);
}

.ai-brain-pulse {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 2px solid #3b82f6;
    opacity: 0;
}

.ai-avatar-wrapper.speaking .ai-brain-pulse {
    animation: brainPulse 2s infinite;
}

@keyframes brainPulse {
    0% {
        transform: scale(1);
        opacity: 0.6;
    }

    100% {
        transform: scale(1.5);
        opacity: 0;
    }
}

.ai-status-tag {
    margin-top: 24px;
    background: rgba(15, 23, 42, 0.6);
    padding: 8px 16px;
    border-radius: 20px;
    color: white;
    font-size: 14px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 8px;
    backdrop-filter: blur(4px);
}

.pulse-dot {
    width: 8px;
    height: 8px;
    background: #10b981;
    border-radius: 50%;
    animation: blink 1.5s infinite;
}

@keyframes blink {

    0%,
    100% {
        opacity: 1;
    }

    50% {
        opacity: 0.4;
    }
}

.ai-subtitle-box {
    position: absolute;
    bottom: 250px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.7);
    padding: 12px 24px;
    border-radius: 12px;
    max-width: 600px;
    text-align: center;
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.ai-subtitle-box p {
    color: white;
    margin: 0;
    font-size: 18px;
    line-height: 1.5;
    font-weight: 500;
}

.local-video-feed {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scaleX(-1);
    /* Mirror effect */
}

.video-off-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 12px;
    background: #1e293b;
    color: #64748b;
}

.self-name-tag {
    position: absolute;
    bottom: 12px;
    left: 12px;
    background: rgba(0, 0, 0, 0.5);
    padding: 4px 10px;
    border-radius: 6px;
    color: white;
    font-size: 12px;
    font-weight: 600;
}

.control-btn.off {
    background: #ef4444 !important;
    color: white !important;
}

.call-controls {
    gap: 12px;
}

.control-btn {
    width: 48px;
    height: 48px;
}

.user-subtitle-box {
    position: absolute;
    bottom: 50px;
    left: 12px;
    right: 12px;
    background: rgba(0, 0, 0, 0.6);
    padding: 6px 12px;
    border-radius: 8px;
    backdrop-filter: blur(4px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    z-index: 15;
    pointer-events: none;
}

.user-subtitle-box p {
    color: white !important;
    margin: 0;
    font-size: 13px;
    line-height: 1.4;
    font-weight: 500;
    text-align: center;
}
